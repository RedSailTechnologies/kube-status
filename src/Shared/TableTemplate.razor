@typeparam TItem

<table class="table @TableClass">
    <thead class="@TableHeaderClass">
        <tr>
            <th scope="col" class="d-none"></th>
            @TableHeader
        </tr>
    </thead>
    <tbody>
        @if (Items != null)
        {
            @foreach (var item in Items)
            {
                <tr>
                    <th scope="row" class="d-none"></th>
                    @RowTemplate(item)
                </tr>

            }
        }
    </tbody>
</table>

@code {
    [Parameter]
    public required RenderFragment TableHeader { get; set; }

    [Parameter]
    public required RenderFragment<TItem> RowTemplate { get; set; }

    [Parameter]
    public required IEnumerable<TItem> Items { get; set; }

    [Parameter]
    public required string TableClass { get; set; }

    [Parameter]
    public required string TableHeaderClass { get; set; }
}